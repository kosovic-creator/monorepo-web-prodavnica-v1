{
  "files": [],
  "references": [
    { "path": "./apps/client" },
    { "path": "./apps/admin" },
    { "path": "./packages/auth" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@actions/*": ["packages/actions/*"],
      "@auth/*": ["packages/auth/*"],
      "@auth/auth/*": ["packages/auth/dist/auth/*"],


      "@/*": ["*"],     // mapira `@/neki/fajl` na `./neki/fajl`
      "@schemas": ["packages/schemas/zod-schemas.ts"],
      "@cloudinary": ["packages/cloudinary.ts"],
      "@types": ["packages/types/type.ts"]
    },
    "target": "ES2017",
    "module": "NodeNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "react", "react-dom"]
    ,"skipLibCheck": true
  }
}
