{
  "name": "monorepo-web-prodavnica",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/formidable": "^3.4.6",
    "@types/node": "24.10.1",
    "@types/react": "19.2.4",
    "@types/react-dom": "18.2.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.22",
    "bcryptjs": "^3.0.3",
    "next-auth": "^4.24.13",
    "postcss": "^8.5.6",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.17",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "npm run build -w packages/auth && turbo run build",
    "postinstall": "npm run build --prefix packages/auth",
    "lint": "turbo run lint",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=prisma/schema.prisma",
    "link:prisma": "sh ./link-prisma.sh",
    "build:client": "cd apps/client && prisma generate --schema=../../prisma/schema.prisma && next build",
    "build:admin": "cd apps/admin && prisma generate --schema=../../prisma/schema.prisma && next build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@shadcn/ui": "^0.0.4",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "formidable": "^3.5.4",
    "i18next": "^25.5.2",
    "lucide-react": "^0.544.0",
    "next": "^14.2.33",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^12.3.1",
    "react-icons": "^5.5.0",
    "react-swipeable": "^7.0.2",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "packageManager": "npm@11.6.2"
}
